<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!--@Styles.Render("~/Content/css")-->
    <!--<link href="~/Content/MainStyle.css" rel="stylesheet" />-->
    <link href="~/Content/Styles/Reset.css" rel="stylesheet" />
    <link href="~/Content/Styles/Style.css" rel="stylesheet" />
    
    <link href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="body-wrapper">
    <div id="body-wrapper" >
        <div class="top-bar">
            <a href="~/Home/Index">
                <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                     width="10em" height="10em" viewBox="0 0 210 210" enable-background="new 0 0 210 210" xml:space="preserve">
                <g>
                <path fill="#FAAA68" stroke="#FAAA68" stroke-miterlimit="10" d="M107.234,95.248c1.333,6.492-2.849,12.835-9.34,14.169
                l-62.691,12.877c-6.492,1.334-12.836-2.848-14.169-9.34L8.157,50.263c-1.334-6.492,2.848-12.836,9.34-14.169l62.69-12.877
                c6.492-1.333,12.836,2.848,14.17,9.34L107.234,95.248z" />



                <circle fill="#F1F2F2" stroke="#F1F2F2" stroke-miterlimit="10" cx="57.695" cy="72.756" r="7.5" />



                <circle fill="#F1F2F2" stroke="#F1F2F2" stroke-miterlimit="10" cx="39.116" cy="101.582" r="7.5" />



                <circle fill="#F1F2F2" stroke="#F1F2F2" stroke-miterlimit="10" cx="76.274" cy="43.927" r="7.5" />



                <path fill="#FAAA68" stroke="#FAAA68" stroke-miterlimit="10" d="M201.23,56.77c4.686,4.686,4.686,12.285,0,16.97l-45.254,45.255
                c-4.686,4.686-12.283,4.686-16.971,0L93.752,73.74c-4.686-4.686-4.686-12.284,0-16.97l45.254-45.255
                c4.688-4.686,12.285-4.686,16.971,0L201.23,56.77z" />



                <circle fill="#F1F2F2" stroke="#F1F2F2" stroke-miterlimit="10" cx="147.491" cy="65.255" r="7.5" />



                <rect x="9.328" y="127.333" fill="none" width="199.999" height="85.999" />


	
                <text transform="matrix(1 0 0 1 9.3276 169.9326)" fill="#FAAA68" stroke="#FAAA68" stroke-miterlimit="10" font-family="Open Sans" font-size="55">UNITED</text>
                <rect x="11.66" y="180.332" fill="none" width="286.665" height="79.332" />


	
                <text transform="matrix(1 0 0 1 11.6597 202.3428)" fill="#FAAA68" stroke="#FAAA68" stroke-miterlimit="10" font-family="Open Sans" font-size="28.5">BOARDGAMES</text>
                </g>
            </svg>
            </a>

            <div id="navigation-circles">
                <div class="circle-wrapper">
                    <a href="~/Home/Index">
                        <div class="circle_info face">
                            <!-- front face-->
                            <p><i class="fa fa-home" aria-hidden="true"></i></p>
                            <h2>Home</h2>
                        </div>
                    </a>
                </div>
                <div class="circle-wrapper">
                    <a href="~/Games/Index">
                        <div class="circle_info face">
                            <!-- front face-->
                            <i class="fa fa-gamepad" aria-hidden="true"></i>
                            <h2>Board games</h2>
                        </div>
                    </a>
                </div>
                <div class="circle-wrapper">
                    <a href="~/Games/Index">
                        <div class="circle_info face">
                            <i class="fa fa-bullhorn" aria-hidden="true"></i>
                            <h2>We recommend</h2>
                        </div>
                    </a>
                </div>
                <div class="circle-wrapper">
                    <a href="~/Games/Index">
                        <div class="circle_info face">
                            <i class="fa fa-comments" aria-hidden="true"></i>
                            <h2>Reviews</h2>
                        </div>
                    </a>
                </div>
            </div>

            <div id="general-search" class="search">
                @using (Html.BeginForm("Index", "Games"))
            {
                    @Html.TextBox("searchString") <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                }
            </div>
        </div>
        @RenderBody()
        @if (User.IsInRole("Administrator") || User.IsInRole("User"))
        {
            @Html.Partial("_Panel")
        }
        @Scripts.Render("~/bundles/jquery")
        <!--@Scripts.Render("~/bundles/bootstrap")-->
        @RenderSection("scripts", required: false)
        <script src="~/Content/Js/Scripts.js">
        </script>
    </div>
</body>
</html>
