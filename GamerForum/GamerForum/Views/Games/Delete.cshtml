@model GamerForum.Models.Games

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var item = Model.Images;
}

<div id="delete-game" class="content">
    <div class="back-to-list">
        <p><a href="~/Games/Index"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back to board games</a></p>
        <p><a href="~/Games/Details/@Model.GameId"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back to game</a></p>
    </div>
    <div class="text-box">
        <h1>Delete <span class="wanted-game-name">@Html.DisplayFor(model => model.Game_name)</span></h1>
        
        <h3>Are you sure you want to delete this?</h3>

      <img src="@item.FirstOrDefault().Image_path" />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <button type="submit">Delete game</button>
            </div>
        }
    </div>
</div>