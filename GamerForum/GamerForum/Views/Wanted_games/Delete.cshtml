@model GamerForum.Models.Wanted_games

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="delete-wanted-game" class="content">
    <p class="back-to-list">
        <a href="~/Wanted_games/Index"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back to list</a>
    </p>
    <div class="text-box">
        <h1>Delete <span class="wanted-game-name">@Html.DisplayFor(model => model.Wanted_Game_Name)</span></h1>

        <h3>Are you sure you want to delete this?</h3>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <button type="submit">Delete wanted game</button>
                </div>
            }
    </div>
</div>