@model IEnumerable<GamerForum.Models.Wanted_games>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Wanted_Game_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wanted_Game_Url)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Wanted_Game_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Wanted_Game_Url)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Wanted_Game_Id }) |
            @if (User.IsInRole("Administrator"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.Wanted_Game_Id }) <br />
                @Html.ActionLink("Delete", "Delete", new { id = item.Wanted_Game_Id })
            }


        </td>
    </tr>
}

</table>
