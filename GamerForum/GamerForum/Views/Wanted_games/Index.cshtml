@model IEnumerable<GamerForum.Models.Wanted_games>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="requested-games-index" class="content">

    <div class="text-box">
        <h1>Requested games</h1>

        <p>
            <a href="~/Wanted_games/Create"><i class="fa fa-plus" aria-hidden="true"></i> Create new</a>
        </p>
        <table>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Link
                </th>
                <th>
                    Request date
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Wanted_Game_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Wanted_Game_Url)
                    </td>
                    <td>
                        [date requested]
                    </td>
                    <td>
                        @if (User.IsInRole("Administrator"))
                        {
                            <a href="~/Games/Create/@item.Wanted_Game_Id"><i class="fa fa-plus-circle" aria-hidden="true"></i></a>
                            <a href="~/Wanted_games/Delete/@item.Wanted_Game_Id"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        }


                    </td>
                </tr>
            }
        </table>
    </div>
</div>